#include<stdio.h>
int main()
{
	int c=0,count=0;
	char s[100];
	printf("Enter a word : ");
	gets(s);
	while(s[c]!='\0')
	{
		if(s[c]=='a'||s[c]=='e'||s[c]=='i'||s[c]=='o'||s[c]=='u'||s[c]=='A'||s[c]=='E'||s[c]=='I'||s[c]=='O'||s[c]=='U')
		    count++;
	    c++;
	}
	printf("Number of vowels in the word %s : %d",s,count);
	return 0;
}
